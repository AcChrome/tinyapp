<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" style="margin: 0 1000px 0 0" href="/urls/new">Create New URL</a>
        <% if (user) {%>
          <h4 style="color: #3D3D3D; margin: 0 20px 0 0">
            <%= user.id %>
          </h4>
          <h4 style="color: #3D3D3D; margin: 0 20px 0 0">
            <%= user.email %>
          </h4>
          <form method="POST" action="/logout">
            <button style="background-color: Transparent; border-color: #3D3D3D; color: #3D3D3D; border-radius: 4px">Logout</button></form>
          <% } else {%>
            <form method="POST">
              <a href="/login">
                <button
                  style="background-color: Transparent; border-color: #3D3D3D; color: #3D3D3D; border-radius: 4px; margin: 0 10px 0 0"><a href="/login">Login</a></button>
              </a>
            </form>
            <form method="POST">
                <button
                  style="background-color: Transparent; border-color: #3D3D3D; color: #3D3D3D; border-radius: 4px"><a href="/register">Register</a></button>
            </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>